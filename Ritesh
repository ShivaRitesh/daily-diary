    <script>  
        // Set today's date
        document.getElementById('date').valueAsDate = new Date();
        
        // Your Google Apps Script Web App URL
        const SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbyixYFWwsfPhr_OI8FBWxV1txutNC5AS59QqqDW-MEr49h26HFx3tgJ0nUxED5tvINV/exec';
        
        document.getElementById('diaryForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const submitBtn = document.getElementById('submitBtn');
            const statusMessage = document.getElementById('statusMessage');
            
            // Disable button and show loading
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="loading"></span> ‡§∏‡•á‡§µ ‡§π‡•ã ‡§∞‡§π‡§æ ‡§π‡•à...';
            
            // Collect form data
            const formData = {
                date: document.getElementById('date').value,
                mood: document.getElementById('mood').value,
                newLearning: document.getElementById('newLearning').value,
                skillUpgrade: document.getElementById('skillUpgrade').value,
                selfImprovement: document.getElementById('selfImprovement').value,
                smartThinking: document.getElementById('smartThinking').value,
                superhumanMoment: document.getElementById('superhumanMoment').value,
                tomorrowFocus: document.getElementById('tomorrowFocus').value
            };
            
            try {
                const response = await fetch(SCRIPT_URL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });
                
                const result = await response.json();
                
                if (result.status === 'success') {
                    statusMessage.className = 'status-message status-success';
                    statusMessage.textContent = '‚úÖ ' + result.message;
                    statusMessage.style.display = 'block';
                    
                    // Reset form after successful submission
                    setTimeout(() => {
                        document.getElementById('diaryForm').reset();
                        document.getElementById('date').valueAsDate = new Date();
                        statusMessage.style.display = 'none';
                    }, 3000);
                } else {
                    throw new Error(result.message);
                }
            } catch (error) {
                statusMessage.className = 'status-message status-error';
                statusMessage.textContent = '‚ùå Error: ' + error.message;
                statusMessage.style.display = 'block';
            } finally {
                // Re-enable button
                submitBtn.disabled = false;
                submitBtn.innerHTML = 'üíæ Google Sheets ‡§Æ‡•á‡§Ç ‡§∏‡•á‡§µ ‡§ï‡§∞‡•á‡§Ç';
            }
        });
    </script>
